        <script>
            const word = "<%= word %>";
            const definition = "<%= definition.replace(/(<([^>]+)>)/gi, '') %>"; // Remove HTML tags for plain text
            const shareUrl = `${window.location.origin}/search/${word}`;
            const shareText = `"${word}": ${definition} \nCheck it out here: ${shareUrl}`;

            // Share feature using Web Share API
            document.getElementById('shareBtn').addEventListener('click', async () => {
                if (navigator.share) {
                    try {
                        await navigator.share({
                            title: `Definition of ${word}`,
                            text: shareText,
                            url: shareUrl,
                        });
                        alert('Shared successfully!');
                    } catch (error) {
                        console.error('Error sharing:', error);
                    }
                } else {
                    alert('Sharing is not supported in your browser. Please copy the link instead.');
                }
            });

            // Copy link to clipboard as fallback
            document.getElementById('copyLinkBtn').addEventListener('click', () => {
                navigator.clipboard.writeText(shareUrl)
                    .then(() => {
                        alert('Link copied to clipboard!');
                    })
                    .catch((error) => {
                        console.error('Error copying link:', error);
                    });
            });
        </script>

        <!-- Image Download Button -->
<button id="downloadBtn">🖼️ Download Image</button>

<!-- Hidden Canvas Element -->
<canvas id="definitionCanvas" style="display: none;"></canvas>

<script>
    const word = "<%= word %>";
    const definition = "<%= definition.replace(/(<([^>]+)>)/gi, '') %>"; // Strip HTML tags
    const logoUrl = '/images/redefyne_logo.png'; // Update with your logo's path

    document.getElementById('downloadBtn').addEventListener('click', () => {
        const canvas = document.getElementById('definitionCanvas');
        const ctx = canvas.getContext('2d');
        const canvasWidth = 800;
        const canvasHeight = 600;

        // Set canvas dimensions
        canvas.width = canvasWidth;
        canvas.height = canvasHeight;

        // Set background color
        ctx.fillStyle = '#ffffff';
        ctx.fillRect(0, 0, canvasWidth, canvasHeight);

        // Set text styles
        ctx.fillStyle = '#000000';
        ctx.font = '24px Arial';
        ctx.textAlign = 'center';

        // Draw the word
        ctx.fillText(word, canvasWidth / 2, 100);

        // Draw the definition (wrap text if too long)
        const definitionLines = wrapText(ctx, definition, canvasWidth - 100);
        let yOffset = 150;
        definitionLines.forEach(line => {
            ctx.fillText(line, canvasWidth / 2, yOffset);
            yOffset += 30;
        });

        // Add the logo as a watermark
        const logoImage = new Image();
        logoImage.src = logoUrl;
        logoImage.onload = () => {
            const logoSize = 100;
            ctx.globalAlpha = 0.3; // Set transparency for watermark
            ctx.drawImage(logoImage, canvasWidth - logoSize - 20, canvasHeight - logoSize - 20, logoSize, logoSize);
            ctx.globalAlpha = 1.0;

            // Trigger image download
            const image = canvas.toDataURL('image/png');
            const link = document.createElement('a');
            link.href = image;
            link.download = `${word}_definition.png`;
            link.click();
        };
    });

    // Helper function to wrap text
    function wrapText(ctx, text, maxWidth) {
        const words = text.split(' ');
        const lines = [];
        let line = '';

        words.forEach(word => {
            const testLine = `${line}${word} `;
            const metrics = ctx.measureText(testLine);
            const testWidth = metrics.width;

            if (testWidth > maxWidth && line !== '') {
                lines.push(line.trim());
                line = `${word} `;
            } else {
                line = testLine;
            }
        });
        lines.push(line.trim());
        return lines;
    }
</script>


